{% extends '_html.twig' %}

{% block content %}
  <div class="content__entity entity-form">
    <h1 class="entity-form__header">Create a new user</h1>

    {% if error %}
      <p class="entity-form__error">{{ error }}</p>
    {% endif %}

    <form class="entity-form__properties" method="post" action="{{ base_url }}/admin/user/create/submit">
      <div class="entity-form__property">
        <label class="entity-form__property-label">Email</label>
        <input class="entity-form__property-value" type="email" name="email" value="" required />
      </div>

      <div class="entity-form__property">
        <label class="entity-form__property-label">Password</label>
        <input class="entity-form__property-value" type="text" name="password" value="" required />
      </div>

      <div class="entity-form__property">
        <label class="entity-form__property-label">Role</label>
        <input class="entity-form__property-value" type="number" name="role" value="0" required />
      </div>

      <ul class="entity-form__actions actions">
        <li class="actions__action"><button class="actions__button button" type="Submit">Create</button></li>
        <li class="actions__action"><a class="actions__button button" href="{{ base_url }}/admin/user">Cancel</a></li>
      </ul>
    </form>
  </div>
{% endblock %}

{% set thread_id = post['parent'] %}
{% set is_op = thread_id == 0 %}

{% if post['rendered'] %}
  {{ post['rendered'] }}
{% else %}
  <section id="reply_{{ post['id'] }}"
    class="post {{ is_op ? 'content__oppost post_oppost oppost' : 'content__post post_reply reply' }}"
    data-post-id="{{ post['id'] }}">
    <div class="post__inner">
      <a id="{{ post['id'] }}" name="{{ post['id'] }}"></a>
      {% include 'components/_post_header.twig' with {'class': 'post__header'} %}

      <div class="post__content">
        {% if post['file_type'] %}
          {% include 'components/_file.twig' with {'class': 'post__file'} %}
        {% endif %}

        <div class="post__message message">
          {{ post['message'] }}

          {% if res == constant('TINYIB_INDEXPAGE') and post['omitted'] > 0 %}
            <p class="post__omitted">
              {{ post['omitted'] }} post{{ post['omitted'] > 1 ? 's' }} omitted. Click Reply to view.
            </p>
          {% endif %}
        </div>
      </div>
    </div>
  </section>
{% endif %}

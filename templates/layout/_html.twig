<!DOCTYPE html>

<html>
  {% include 'layout/_head.twig' %}

  <body {{ body_attribs }}>
    {% if constant('TINYIB_GTM') %}
      <!-- Google Tag Manager (noscript) -->
      <noscript><iframe src="https://www.googletagmanager.com/ns.html?id={{ constant('TINYIB_GTM') }}"
      height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
      <!-- End Google Tag Manager (noscript) -->
    {% endif %}

    <div class="layout">
      {% include 'layout/_header.twig' with {'class': 'layout__header'} %}

      {% with %}
        {% set class = 'layout__content' %}
        {% block content %}{% endblock %}
      {% endwith %}

      {% include 'layout/_footer.twig' with {'class': 'layout__footer'} %}
    </div>
  </body>
</html>

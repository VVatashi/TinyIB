{% extends '_html.twig' %}

{% block body %}
  <div class="content__return-wrapper">
    <a class="content__return-link" href="../">Return</a>
  </div>

  <div class="content__replymode replymode">Posting mode: Reply</div>

  <form id="delform" action="imgboard.php?delete" method="post">
    <input type="hidden" name="board" value="{{ constant('TINYIB_BOARD') }}" />

    {% for post in posts %}
      {% if post['parent'] == constant('TINYIB_NEWTHREAD') %}
        {% include '_post_oppost.twig' %}
      {% else %}
        {% include '_post.twig' %}
      {% endif %}
    {% endfor %}

    <hr />

    <div class="content__userdelete">
      Delete Post
      <input type="password" name="password" id="deletepostpassword" size="8" placeholder="Password" />&nbsp;
      <input name="deletepost" value="Delete" type="submit" />
    </div>
  </form>

  <div class="content__postarea">
    {% include '_post_form.twig' %}
  </div>
{% endblock %}

{% if constant('TINYIB_CAPTCHA') %}
  <tr class="{{ class ? class ~ ' ' }}field field_captcha">
    <td class="field__label-wrapper">
      <label class="field__label" for="captcha">CAPTCHA</label>
    </td>

    <td class="field__input-wrapper">
      {% if constant('TINYIB_CAPTCHA') == 'recaptcha' %}
        <div style="min-height: 80px;">
          <div class="g-recaptcha" data-sitekey="{{ constant('TINYIB_RECAPTCHA_SITE') }}"></div>

          <noscript>
            <div>
              <div style="width: 302px; height: 422px; position: relative;">
                <div style="width: 302px; height: 422px; position: absolute;">
                  <iframe src="https://www.google.com/recaptcha/api/fallback?k={{ constant('TINYIB_RECAPTCHA_SITE') }}" frameborder="0" scrolling="no" style="width: 302px; height:422px; border-style: none;"></iframe>
                </div>
              </div>

              <div style="width: 300px; height: 60px; border-style: none;bottom: 12px; left: 25px; margin: 0px; padding: 0px; right: 25px;background: #f9f9f9; border: 1px solid #c1c1c1; border-radius: 3px;">
                <textarea id="g-recaptcha-response" name="g-recaptcha-response" class="g-recaptcha-response" style="width: 250px; height: 40px; border: 1px solid #c1c1c1; margin: 10px 25px; padding: 0px; resize: none;"></textarea>
              </div>
            </div>
          </noscript>
        </div>
      {% else %} <!-- Simple CAPTCHA -->
        <input type="text" class="field__input" name="captcha" id="captcha" autocomplete="off" />&nbsp;&nbsp;(enter the text below)<br />
        <img id="captchaimage" src="/{{ constant('TINYIB_BOARD') }}/inc/captcha.php" width="175" height="55" alt="CAPTCHA" style="margin-top: 5px;cursor: pointer;">
      {% endif %}
    </td>
  </tr>
{% endif %}

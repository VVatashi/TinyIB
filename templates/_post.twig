{% set thread_id = post['parent'] %}

<div class="content__post post post_reply reply" id="reply_{{ post['id'] }}">
  <div class="post__inner">
    <div class="post__header post-header">
      {% include '_post_header.twig' %}
    </div>

    {% if post['file_type'] %}
      <div class="post__file-info file-info filesize">
        {% include '_file_info.twig' %}
      </div>

      <div class="post__file file">
        {% include '_file.twig' %}
      </div>
    {% endif %}

    <div class="post__message message">
      {{ post['message'] }}
    </div>
  </div>
</div>

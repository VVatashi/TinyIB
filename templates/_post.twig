{% set thread_id = post['parent'] %}

<table>
  <tbody>
    <tr>
      <td class="doubledash">&#0168;</td>
      <td class="reply" id="reply{{ post['id'] }}">
        <a id="{{ post['id'] }}"></a>

        <label>
          <input type="checkbox" name="delete" value="{{ post['id'] }}" />

          {% if post['subject'] %}
            <span class="filetitle">{{ post['subject'] }}</span>
          {% endif %}

          {{ post['nameblock'] }}
        </label>

        <span class="reflink">
          {% if res == constant('TINYIB_RESPAGE') %}
            <a href="{{ thread_id }}.html#{{ post['id'] }}">No.</a>
            <a href="{{ thread_id }}.html#q{{ post['id'] }}"
              onclick="javascript:quotePost('{{ post['id'] }}')">
              {{ post['id'] }}
            </a>
          {% else %}
            <a href="res/{{ thread_id }}.html#{{ post['id'] }}">No.</a>
            <a href="res/{{ thread_id }}.html#q{{ post['id'] }}">{{ post['id'] }}</a>
          {% endif %}

          {% if post[stickied] %}
            <img src="sticky.png" alt="Stickied" title="Stickied" width="16" height="16">
          {% endif %}
        </span>

        {% include '_file.twig' %}

        <div class="message">
          {{ post['message'] }}

          {% if post['truncated'] %}
            <br />
            <span class="omittedposts">Post truncated. Click Reply to view.</span>
            <br />
          {% endif %}
        </div>
      </td>
    </tr>
  </tbody>
</table>

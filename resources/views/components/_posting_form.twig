{% set isInThread = res != constant('TINYIB_INDEXPAGE') %}

{% spaceless %}
  <div id="posting-form-wrapper" class="content__posting-form-wrapper">
    {% if not isInThread %}
      <button type="button" class="button content__reply-button" id="posting-form-show">Create thread</button>
    {% else %}
      <button type="button" class="button content__reply-button" id="posting-form-show">Reply</button>
    {% endif %}
    <div id="posting-form"></div>
  </div>
{% endspaceless %}

<div class="{{ class ? class ~ ' ' }} pager">
  {% set start = max(current_page - 10, 0) %}
  {% set end = min(current_page + 10, total_pages - 1) %}

  <ul class="pager__list">
    {% if start > 0 %}
      <li class="pager__item">
        <a href="?page={{ 0 }}">First</a>
      </li>
    {% endif %}

    {% if current_page > 0 %}
      <li class="pager__item">
        <a href="?page={{ current_page - 1 }}">Previous</a>
      </li>
    {% endif %}

    {% if start > 0 %}
      <li class="pager__item">â€¦</li>
    {% endif %}

    {% for page in range(start, end) %}
      <li class="pager__item">
        {% if page != current_page %}
          <a href="?page={{ page }}">{{ page + 1 }}</a>
        {% else %}
          <strong>{{ page + 1 }}</strong>
        {% endif %}
      </li>
    {% endfor %}

    {% if end < total_pages - 1 %}
      <li class="pager__item">â€¦</li>
    {% endif %}

    {% if current_page < total_pages - 1 %}
      <li class="pager__item">
        <a href="?page={{ current_page + 1 }}">Next</a>
      </li>
    {% endif %}

    {% if end < total_pages - 1 %}
      <li class="pager__item">
        <a href="?page={{ total_pages - 1 }}">Last</a>
      </li>
    {% endif %}
  </ul>
</div>

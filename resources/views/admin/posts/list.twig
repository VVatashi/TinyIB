{% set title = 'Post List' %}

{% set breadcrumb = [
  { url: base_url, title: config('BOARDDESC') },
  { url: base_url ~ '/admin', title: 'Admin Dashboard' },
] %}

{% extends 'admin/layout/_html.twig' %}

{% block content %}
  <div class="list content__list">
    <div class="list__header">
      <h1 class="list__title">{{ title }}</h1>
    </div>

    <div class="list__content">
      {% include 'admin/components/_filters.twig' with filter + {
        'list_url': base_url ~ '/admin/posts',
        'class': 'list__filters',
      } %}

      <div id="list" data-url="{{ base_url }}/ajax/admin/posts">
      {% include 'admin/posts/_list.twig' %}
      </div>
    </div>
  </div>
{% endblock %}

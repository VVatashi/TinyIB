{% set title = 'User List' %}

{% set breadcrumb = [
  { url: url(), title: config('BOARDDESC') },
  { url: url('admin'), title: 'Admin Dashboard' },
] %}

{% extends 'admin/layout/_html.twig' %}

{% block content %}
  <div class="list content__list">
    <div class="list__header">
      <h1 class="list__title">{{ title }}</h1>
    </div>

    <div class="list__content">
      <div class="list__actions">
        <ul class="list__actions-list">
          <li class="list__actions-list-item">
            <a class="button" href="{{ url('admin/users/create') }}">Create user</a>
          </li>
        </ul>
      </div>

      {% include 'admin/components/_filters.twig' with filter + {
        'list_url': url('admin/users'),
        'class': 'list__filters',
      } %}

      <div id="list" data-url="{{ url('ajax/admin/users') }}">
      {% include 'admin/users/_list.twig' %}
      </div>
    </div>
  </div>
{% endblock %}

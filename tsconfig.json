{
    "include": [
        "resources/components/**/*.ts",
        "resources/components/**/*.tsx",
        "resources/ts/**/*.ts",
    ],
    "exclude": [
        "node_modules/**/*"
    ],
    "compilerOptions": {
        "esModuleInterop": true,
        "noImplicitAny": true,
        "target": "es6",
        "module": "commonjs",
        "jsx": "react",
        "lib": [
            "dom",
            "es2015",
            "es2015.promise"
        ],
        "outDir": "./"
    }
}
